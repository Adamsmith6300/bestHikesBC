<% include ../partials/header %>


<div class="content container">
    <div class="row">
        <div class="hike-form">
          <h1 class="hike-form-heading">Edit <%= hike.name %></h1>
            <form action="/hikes/<%= hike._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[name]" value="<%= hike.name %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="hike[duration]" value="<%= hike.duration %>" min="0.1" step="0.1" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="hike[length]" value="<%= hike.length %>" min="0.1" step="0.1" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="hike[elevation]" value="<%= hike.elevation %>" min="0.0" step="1.0" required>
                </div>
                <div>
                  <p class="form-heading"><strong>Difficulty:</strong></p>
                </div>
                <div class="form-check form-check-inline">
                  <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="hike[difficulty]" value="Easy"> Easy
                  </label>
                  <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="hike[difficulty]" value="Medium"> Medium
                  </label>
                  <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="hike[difficulty]" value="Hard"> Hard
                  </label>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[image]" value="<%= hike.image %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[amenities]" value="<%= hike.amenities %>" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="hike[description]" required><%= hike.description %></textarea>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="hike[directions]" required><%= hike.directions %></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[location]" value="<%= hike.location %>">
                </div>
                <div class="form-group dropdown">
                  <select name="hike[region]" class="form-control">
                    <option value="<%= hike.region %>"><%= hike.region %></option>
                    <option value="Vancouver Coast & Mountains">Vancouver Coast & Mountains</option>
                    <option value="Vancouver Island">Vancouver Island</option>
                    <option value="Thompson Okanagan">Thompson Okanagan</option>
                    <option value="Cariboo Chilcotin">Cariboo Chilcotin</option>
                    <option value="Kootenay Rockies">Kootenay Rockies</option>
                    <option value="Northern BC">Northern BC</option>
                  </select>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/hikes/<%= hike._id %>">Go back</a>
        </div>
    </div>
</div>

<ul class="background">
      <li></li>
</ul>

<% include ../partials/footer %>
