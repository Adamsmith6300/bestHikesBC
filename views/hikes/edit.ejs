<% include ../partials/header %>


<div id="hike-content" class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= hike.name %></h1>
        <div class="hike-form">
            <form action="/hikes/<%= hike._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[name]" value="<%= hike.name %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="hike[duration]" value="<%= hike.duration %>" min="0.1" step="0.1" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="hike[length]" value="<%= hike.length %>" min="0.1" step="0.1" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="hike[elevation]" value="<%= hike.elevation %>" min="0.0" step="1.0" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[difficulty]" value="<%= hike.difficulty %>" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[image]" value="<%= hike.image %>" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="hike[description]" required><%= hike.description %></textarea>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="hike[directions]" required><%= hike.directions %></textarea>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[location]" value="<%= hike.location %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="hike[amenities]" value="<%= hike.amenities %>" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/hikes">Go back</a>
        </div>
    </div>
</div>

<ul class="slideshow">
      <li></li>
</ul>

<% include ../partials/footer %>
