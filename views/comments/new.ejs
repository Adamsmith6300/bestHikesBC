<% include ../partials/header %>


<div class="content container">
    <div class="row">
      <div class="comment-form">
        <h1 class="comment-form-heading">Add New Comment to <%= hike.name %></h1>
        <form action="/hikes/<%= hike._id %>/comments " method="POST">
              <div class="form-group">
                  <textarea class="form-control" type="text" name="comment[text]" required></textarea>
              </div>
              <div class="form-group">
                  <button class="btn btn-large btn-primary btn-block">Submit!</button>
              </div>
        </form>
        <a href="/hikes/<%= hike._id %>">Go back</a>
      </div>
    </div>
</div>

<ul class="background">
      <li></li>
</ul>

