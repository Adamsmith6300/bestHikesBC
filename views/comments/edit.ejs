<% include ../partials/header %>


<div class="content container">
    <div class="row">
        <div class="comment-form">
          <h1 class="comment-form-heading">Edit Comment for <%= hike.name %></h1>
          <form action="/hikes/<%= hike_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <textarea class="form-control" type="text" name="comment[text]" required><%= comment.text %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-large btn-primary btn-block">Submit!</button>
            </div>
          </form>
          <a href="/hikes/<%= hike_id %>">Go back</a>
        </div>
    </div>
</div>

<ul class="background">
      <li></li>
</ul>

<% include ../partials/footer %>
